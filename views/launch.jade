doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.0/css/foundation.min.css")
    link(rel="stylesheet", href="/main.css")
    title Skynet
  body
    div(class="row")
      div(class="large-12")
        h1 Launch a Testnet
      div(class="large-8 columns")
        button(class="button success") Launch!
        h2 Active Testnets
        table
          tr
            th ID
            th Uptime
            th Actions
          each testnet in testnets
            tr
              td= testnet.guid
              td= testnet.uptime
              td
                button(class="button") Details
                button(class="button alert") Teardown
      div(class="large-4 columns")
        table
          tr
            th SHA
            td= commit.sha
          tr
            th Summary
            td= commit.commit.message
          tr
            th Author
            td
              p= commit.author.login
              img(src=commit.author.avatar_url)
